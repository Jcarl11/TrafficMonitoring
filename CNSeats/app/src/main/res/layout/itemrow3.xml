<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TITLEMOVIE"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/TEXTVIEW_TITLE4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Game"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TITLERATING"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/TEXTVIEW_RATING4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TITLEPLAYDATE"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="TIME"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/TEXTVIEW_TIME4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1997-08-11 9:30:25"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TITLEDESC"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/TEXTVIEW_DESCRIPTION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DJCNJSDCNKVLV LKV"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>